<%- include('../partials/header') %>
<div class="min-h-screen bg-gray-50 py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="mb-10">
            <h1 class="text-3xl font-bold text-gray-900">Home Section Management</h1>
            <p class="text-gray-500 mt-1">Manage specific sections of the home page directly.</p>
            <a href="/admin/dashboard" class="text-blue-600 hover:text-blue-800 font-medium mt-2 inline-block">&larr; Back to Dashboard</a>
        </div>

        <%- include('../partials/messages') %>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            
            <!-- Section 1: NSMOSA Events (Left Column) -->
            <div class="bg-white rounded-xl shadow-lg border border-gray-100 overflow-hidden">
                <div class="bg-gradient-to-r from-blue-600 to-blue-700 p-4">
                    <h2 class="text-white font-bold text-lg uppercase tracking-wide">NSMOSA Events</h2>
                    <p class="text-blue-100 text-xs">Featured left column event</p>
                </div>
                <div class="p-6">
                    <form action="/admin/create" method="POST">
                        <input type="hidden" name="section" value="home_nsmosa_events">
                        
                        <div class="mb-4">
                            <label class="block text-sm font-medium text-gray-700 mb-1">Title</label>
                            <input type="text" name="title" required class="w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500">
                        </div>

                        <div class="mb-4">
                            <label class="block text-sm font-medium text-gray-700 mb-1">Image URL</label>
                            <input type="text" name="imageUrl" required placeholder="/images/..." class="w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500">
                            <p class="text-xs text-gray-500 mt-1">Use a vertical aspect ratio image.</p>
                        </div>
                        
                        <div class="mb-6">
                            <label class="block text-sm font-medium text-gray-700 mb-1">Description</label>
                            <textarea name="description" rows="2" class="w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500"></textarea>
                        </div>

                        <button type="submit" class="w-full bg-blue-600 text-white font-bold py-2 rounded-lg hover:bg-blue-700 transition">
                            Upload to Events
                        </button>
                    </form>
                </div>
            </div>

            <!-- Section 2: Middle Box (Central Carousel) -->
            <div class="bg-white rounded-xl shadow-lg border border-gray-100 overflow-hidden">
                <div class="bg-gradient-to-r from-purple-600 to-pink-600 p-4">
                    <h2 class="text-white font-bold text-lg uppercase tracking-wide">Home Middle Box</h2>
                    <p class="text-purple-100 text-xs">Main central slider content</p>
                </div>
                <div class="p-6">
                    <form action="/admin/create" method="POST">
                        <input type="hidden" name="section" value="home_middle_box">
                        
                        <div class="mb-4">
                            <label class="block text-sm font-medium text-gray-700 mb-1">Title</label>
                            <input type="text" name="title" required class="w-full rounded-lg border-gray-300 shadow-sm focus:border-purple-500 focus:ring-purple-500">
                        </div>

                        <div class="mb-4">
                            <label class="block text-sm font-medium text-gray-700 mb-1">Image URL</label>
                            <input type="text" name="imageUrl" required placeholder="/images/..." class="w-full rounded-lg border-gray-300 shadow-sm focus:border-purple-500 focus:ring-purple-500">
                            <p class="text-xs text-gray-500 mt-1">High quality landscape images.</p>
                        </div>
                        
                        <div class="mb-6">
                            <label class="block text-sm font-medium text-gray-700 mb-1">Description</label>
                            <textarea name="description" rows="2" class="w-full rounded-lg border-gray-300 shadow-sm focus:border-purple-500 focus:ring-purple-500"></textarea>
                        </div>

                        <button type="submit" class="w-full bg-purple-600 text-white font-bold py-2 rounded-lg hover:bg-purple-700 transition">
                            Upload to Middle Box
                        </button>
                    </form>
                </div>
            </div>

            <!-- Section 3: Photo Gallery (Right/Bottom Area) -->
            <div class="bg-white rounded-xl shadow-lg border border-gray-100 overflow-hidden">
                <div class="bg-gradient-to-r from-yellow-500 to-orange-500 p-4">
                    <h2 class="text-white font-bold text-lg uppercase tracking-wide">Photo Gallery</h2>
                    <p class="text-yellow-100 text-xs">Side/Bottom gallery widget</p>
                </div>
                <div class="p-6">
                    <form action="/admin/create" method="POST">
                        <input type="hidden" name="section" value="home_photo_gallery">
                        
                        <div class="mb-4">
                            <label class="block text-sm font-medium text-gray-700 mb-1">Title</label>
                            <input type="text" name="title" class="w-full rounded-lg border-gray-300 shadow-sm focus:border-yellow-500 focus:ring-yellow-500">
                        </div>

                        <div class="mb-4">
                            <label class="block text-sm font-medium text-gray-700 mb-1">Image URL</label>
                            <input type="text" name="imageUrl" required placeholder="/images/..." class="w-full rounded-lg border-gray-300 shadow-sm focus:border-yellow-500 focus:ring-yellow-500">
                            <p class="text-xs text-gray-500 mt-1">Square or landscape images.</p>
                        </div>
                        
                        <div class="mb-6">
                            <label class="block text-sm font-medium text-gray-700 mb-1">Description</label>
                            <textarea name="description" rows="2" class="w-full rounded-lg border-gray-300 shadow-sm focus:border-yellow-500 focus:ring-yellow-500"></textarea>
                        </div>

                        <button type="submit" class="w-full bg-yellow-600 text-white font-bold py-2 rounded-lg hover:bg-yellow-700 transition">
                            Upload to Gallery
                        </button>
                    </form>
                </div>
            </div>
            
        </div>
    </div>
</div>
<%- include('../partials/footer') %>
