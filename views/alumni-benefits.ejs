    <style>
        @keyframes revealUp {
            from {
                opacity: 0;
                transform: translateY(30px) scale(0.98);
            }

            to {
                opacity: 1;
                transform: translateY(0) scale(1);
            }
        }

        .animate-reveal {
            animation: revealUp 1s cubic-bezier(0.2, 0.8, 0.2, 1) forwards;
        }

        /* Sophisticated Floating Bloom Effect */
        .advanced-hover {
            transition: all 0.7s cubic-bezier(0.23, 1, 0.32, 1);
            position: relative;
            background: white;
            /* Changed from #0A2040 for text readability if needed, or keep transparent/white */
            cursor: default;
        }

        .advanced-hover::before {
            content: '';
            position: absolute;
            inset: 0;
            background: radial-gradient(circle at center, rgba(0, 163, 224, 0.05) 0%, transparent 70%);
            opacity: 0;
            transition: opacity 0.7s ease;
            pointer-events: none;
        }

        .advanced-hover:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 40px -15px rgba(0, 0, 0, 0.1);
        }

        .advanced-hover:hover::before {
            opacity: 1;
        }

        /* Premium Card */
        .premium-card {
            transition: all 0.5s cubic-bezier(0.23, 1, 0.32, 1);
            position: relative;
            z-index: 1;
            border: 1px solid #f3f4f6;
            /* border-gray-100 */
        }

        .premium-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 20px 40px -10px rgba(0, 75, 125, 0.1);
            border-color: #bfdbfe;
            /* blue-200 */
        }

        .premium-card::before {
            content: '';
            position: absolute;
            inset: 0;
            border-radius: inherit;
            padding: 2px;
            background: linear-gradient(45deg, transparent, rgba(0, 163, 224, 0.3), transparent);
            -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
            mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
            -webkit-mask-composite: xor;
            mask-composite: exclude;
            opacity: 0;
            transition: opacity 0.5s ease;
        }

        .premium-card:hover::before {
            opacity: 1;
        }

        /* Floating Icon */
        .icon-floating {
            transition: all 0.6s cubic-bezier(0.34, 1.56, 0.64, 1);
        }

        .premium-card:hover .icon-floating {
            transform: scale(1.15) rotate(8deg);
            background: linear-gradient(135deg, #e0f2fe, #bfdbfe);
            /* blue-50 to blue-200 */
            color: #0284c7;
            /* blue-600 */
        }

        /* Magnetic Title */
        .magnetic-title {
            position: relative;
            display: inline-block;
        }

        .magnetic-title::after {
            content: '';
            position: absolute;
            bottom: -4px;
            left: 0;
            width: 30px;
            height: 3px;
            background: #FFD700;
            transition: width 0.6s cubic-bezier(0.23, 1, 0.32, 1);
        }

        .magnetic-title:hover::after {
            width: 100%;
        }

        /* Depth Image */
        .depth-image {
            transition: all 0.8s cubic-bezier(0.23, 1, 0.32, 1);
        }

        .depth-image:hover {
            transform: scale(1.03) rotate(1deg);
            box-shadow: 0 30px 60px -12px rgba(0, 0, 0, 0.25);
        }
    </style>

