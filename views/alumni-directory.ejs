<%- include('partials/header') %>

    <div class="bg-gray-50 min-h-screen py-12">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

            <!-- Header Section -->
            <div class="mb-10">
                <h1 class="text-3xl font-bold text-[#0A2040] mb-3">Alumni Directory</h1>
                <p class="text-gray-600 text-sm md:text-base">
                    Connect with NSMOSA alumni from around the world. Search by name, batch, location, or industry.
                </p>
            </div>

            <!-- Search Bar -->
            <div class="bg-white rounded-lg p-2 shadow-sm border border-gray-200 mb-12 flex flex-col md:flex-row gap-2">
                <input type="text" placeholder="Search by name, batch, location, or industry..."
                    class="flex-grow px-4 py-3 text-gray-700 bg-transparent focus:outline-none placeholder-gray-400">
                <button
                    class="bg-[#0A2040] text-white px-8 py-3 rounded-md font-medium hover:bg-blue-900 transition-colors flex items-center justify-center gap-2 shadow-lg shadow-blue-900/20">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                    </svg>
                    Search
                </button>
            </div>

            <!-- Directory Grid -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">

                <!-- Card 1 -->
                <div
                    class="bg-white rounded-xl shadow-md p-6 flex flex-col items-center text-center border border-gray-100 hover:shadow-xl transition-shadow duration-300">
                    <div class="w-24 h-24 rounded-full overflow-hidden mb-4 border-4 border-white shadow-lg">
                        <img src="https://ui-avatars.com/api/?name=Priya+Sharma&background=0A2040&color=fff&size=150"
                            alt="Dr. Priya Sharma" class="w-full h-full object-cover">
                    </div>
                    <h3 class="text-lg font-bold text-[#0A2040]">Dr. Priya Sharma</h3>
                    <p class="text-xs text-gray-500 mb-2">Class of 2008 | Electronics</p>

                    <div class="flex items-center justify-center text-xs text-gray-600 mb-1 gap-1">
                        <svg class="w-3 h-3 text-[#0A2040]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                        </svg>
                        Delhi, India
                    </div>
                    <p class="text-xs text-gray-500 mb-6">Product Manager at Google</p>

                    <button
                        class="w-full py-2.5 bg-[#0A2040] text-white text-sm font-bold rounded-lg hover:bg-blue-900 transition-colors shadow-md mt-auto">
                        Connect
                    </button>
                </div>

                <!-- Card 2 -->
                <div
                    class="bg-white rounded-xl shadow-md p-6 flex flex-col items-center text-center border border-gray-100 hover:shadow-xl transition-shadow duration-300">
                    <div class="w-24 h-24 rounded-full overflow-hidden mb-4 border-4 border-white shadow-lg">
                        <img src="https://ui-avatars.com/api/?name=Amit+Kumar&background=FFD700&color=0A2040&size=150"
                            alt="Amit Kumar" class="w-full h-full object-cover">
                    </div>
                    <h3 class="text-lg font-bold text-[#0A2040]">Amit Kumar</h3>
                    <p class="text-xs text-gray-500 mb-2">Class of 2010 | Mechanical</p>

