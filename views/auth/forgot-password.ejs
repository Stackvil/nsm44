<%- include('../partials/header') %>

    <main
        class="flex-grow flex items-center justify-center py-20 px-4 relative min-h-[calc(100vh-120px)] bg-cover bg-center"
        style="background-image: url('/images/HOME%20PAGE%20PHOTOS%20NSM/event%204.jpg');">
        <div class="absolute inset-0 bg-[#0A2040]/70 backdrop-blur-[2px]"></div>

        <div class="relative max-w-md w-full z-10">
            <div class="bg-white rounded-[2rem] shadow-2xl overflow-hidden border border-white/20">
                <div class="bg-gradient-to-r from-[#0A2040] to-[#113061] p-8 text-center">
                    <div
                        class="inline-flex items-center justify-center w-16 h-16 bg-white/10 rounded-2xl mb-4 border border-white/20">
                        <svg class="w-8 h-8 text-[#FFD700]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" />
                        </svg>
                    </div>
                    <h2 class="text-2xl font-bold text-white tracking-tight uppercase">Forgot Password</h2>
                    <p class="text-blue-100/70 text-sm mt-1 uppercase tracking-widest font-semibold">Enter your email to
                        receive an OTP</p>
                </div>

                <div class="p-8 sm:p-10">
                    <%- include('../partials/messages') %>

                        <form class="space-y-6" action="/auth/forgot-password" method="POST">
                            <div class="space-y-2">
                                <label for="email"
                                    class="block text-xs font-bold text-gray-500 uppercase tracking-widest ml-1">Email
                                    Address</label>
                                <input id="email" name="email" type="email" required
                                    class="block w-full px-5 py-4 bg-gray-50 border border-gray-200 rounded-xl text-gray-900 focus:outline-none focus:ring-2 focus:ring-[#0A2040] focus:border-transparent transition-all shadow-sm"
                                    placeholder="alumni@nsm.com">
                            </div>

                            <div class="pt-4">
                                <button type="submit"
                                    class="w-full flex justify-center items-center py-4 px-6 border border-transparent text-sm font-bold rounded-xl text-white bg-[#0A2040] hover:bg-[#113061] transition-all shadow-lg active:scale-[0.98] uppercase tracking-widest">
                                    Send Reset Code
                                </button>
                            </div>

                            <div class="text-center pt-8 border-t border-gray-100 mt-8">
                                <p class="text-xs font-bold text-gray-400 uppercase tracking-widest">
                                    Remember your password?
                                    <a href="/auth/login"
                                        class="text-[#0A2040] hover:text-blue-700 ml-1 hover:underline">Log In</a>
                                </p>
                            </div>
                        </form>
                </div>
            </div>
        </div>
    </main>

    <%- include('../partials/footer') %>