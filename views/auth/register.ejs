<%- include('../partials/header') %>

    <div class="min-h-screen bg-gradient-to-br from-[#8B5CF6] via-[#A78BFA] to-[#EC4899] py-12 px-4 sm:px-6 lg:px-8">

        <!-- Hero Section -->
        <div class="text-center mb-12">
            <div
                class="inline-block px-4 py-1 rounded-full bg-white/20 backdrop-blur-md border border-white/30 text-white text-xs font-bold uppercase tracking-wider mb-4 shadow-lg">
                <i class="fas fa-star text-yellow-300 mr-2"></i> Exclusive Membership
            </div>
            <h1 class="text-4xl md:text-5xl font-extrabold text-white mb-4 drop-shadow-md">
                Join the <span class="text-yellow-300">NSMOSA</span> Community
            </h1>
            <p class="max-w-2xl mx-auto text-white/90 text-sm md:text-base leading-relaxed">
                Become part of an elite network of alumni, connect with fellow graduates, and contribute to the legacy
                of excellence. Your membership opens doors to exclusive events, networking opportunities, and lifelong
                connections.
            </p>
        </div>

        <!-- Features Grid -->
        <div class="max-w-4xl mx-auto grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
            <!-- Card 1 -->
            <div
                class="bg-white/10 backdrop-blur-md border border-white/20 rounded-xl p-6 text-center hover:bg-white/20 transition duration-300 group cursor-default">
                <div
                    class="w-12 h-12 mx-auto bg-white/20 rounded-full flex items-center justify-center mb-3 group-hover:scale-110 transition duration-300">
                    <i class="fas fa-users text-yellow-300 text-xl"></i>
                </div>
                <h3 class="text-white font-bold text-sm uppercase tracking-wide">Network Access</h3>
            </div>
            <!-- Card 2 -->
            <div
                class="bg-white/10 backdrop-blur-md border border-white/20 rounded-xl p-6 text-center hover:bg-white/20 transition duration-300 group cursor-default">
                <div
                    class="w-12 h-12 mx-auto bg-white/20 rounded-full flex items-center justify-center mb-3 group-hover:scale-110 transition duration-300">
                    <i class="fas fa-calendar-alt text-yellow-300 text-xl"></i>
                </div>
                <h3 class="text-white font-bold text-sm uppercase tracking-wide">Exclusive Events</h3>
            </div>
            <!-- Card 3 -->
            <div
                class="bg-white/10 backdrop-blur-md border border-white/20 rounded-xl p-6 text-center hover:bg-white/20 transition duration-300 group cursor-default">
                <div
                    class="w-12 h-12 mx-auto bg-white/20 rounded-full flex items-center justify-center mb-3 group-hover:scale-110 transition duration-300">
                    <i class="fas fa-graduation-cap text-yellow-300 text-xl"></i>
                </div>
                <h3 class="text-white font-bold text-sm uppercase tracking-wide">Lifelong Membership</h3>
            </div>
        </div>

        <!-- Registration Card -->
        <div class="max-w-2xl mx-auto">
            <div class="bg-white rounded-3xl shadow-2xl overflow-hidden">
                <!-- Card Header -->
                <div
                    class="bg-gradient-to-r from-[#6366f1] to-[#8b5cf6] p-8 text-center text-white relative overflow-hidden">
                    <div class="relative z-10">
                        <div
                            class="w-12 h-12 mx-auto bg-white/20 rounded-xl flex items-center justify-center mb-3 border border-white/30">
                            <i class="fas fa-id-card text-2xl"></i>
                        </div>
                        <h2 class="text-2xl font-bold">Membership Registration</h2>
                        <p class="text-indigo-100 text-sm mt-1">Complete your details to join NSMOSA</p>
                    </div>
                </div>

                <!-- Card Body -->
                <div class="p-8 md:p-10">
                    <%- include('../partials/messages') %>

                        <form action="/auth/register" method="POST" class="space-y-6">

                            <!-- Section Title -->
                            <div class="flex items-center gap-2 mb-6">
                                <div
                                    class="w-8 h-8 rounded-full bg-indigo-100 flex items-center justify-center text-indigo-600">
                                    <i class="fas fa-user"></i>
                                </div>
                                <h3 class="text-gray-800 font-bold text-lg">Personal Information</h3>
                            </div>

                            <!-- Row 1 -->
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                <div>
                                    <label class="block text-xs font-bold text-gray-700 uppercase mb-2">Full Name <span
                                            class="text-red-500">*</span></label>
                                    <div class="relative">
                                        <span
                                            class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none text-gray-400">
                                            <i class="fas fa-user"></i>
                                        </span>
                                        <input type="text" name="fullName" required placeholder="Enter your full name"
                                            class="w-full pl-10 pr-4 py-3 bg-gray-50 border border-gray-200 rounded-lg text-sm focus:bg-white focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500 outline-none transition-colors">
                                    </div>
                                </div>
                                <div>
                                    <label class="block text-xs font-bold text-gray-700 uppercase mb-2">Email Address
                                        <span class="text-red-500">*</span></label>
                                    <div class="relative">
                                        <span
                                            class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none text-gray-400">
                                            <i class="fas fa-envelope"></i>
                                        </span>
                                        <input type="email" name="email" required placeholder="your.email@example.com"
                                            class="w-full pl-10 pr-4 py-3 bg-gray-50 border border-gray-200 rounded-lg text-sm focus:bg-white focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500 outline-none transition-colors">
                                    </div>
                                </div>
                            </div>

                            <!-- Row 2 -->
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                <div>
                                    <label class="block text-xs font-bold text-gray-700 uppercase mb-2">Phone Number
                                        <span class="text-red-500">*</span></label>
                                    <div class="relative">
                                        <span
                                            class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none text-gray-400">
                                            <i class="fas fa-phone"></i>
                                        </span>
                                        <input type="tel" name="phoneNumber" required placeholder="+91 98765 43210"
                                            class="w-full pl-10 pr-4 py-3 bg-gray-50 border border-gray-200 rounded-lg text-sm focus:bg-white focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500 outline-none transition-colors">
                                    </div>
                                </div>
                                <div>
                                    <label class="block text-xs font-bold text-gray-700 uppercase mb-2">Graduation Year
                                        <span class="text-red-500">*</span></label>
                                    <div class="relative">
                                        <span
                                            class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none text-gray-400">
                                            <i class="fas fa-graduation-cap"></i>
                                        </span>
                                        <input type="number" name="graduationYear" required placeholder="e.g., 2020"
                                            min="1950" max="2030"
                                            class="w-full pl-10 pr-4 py-3 bg-gray-50 border border-gray-200 rounded-lg text-sm focus:bg-white focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500 outline-none transition-colors">
                                    </div>
                                </div>
                            </div>

                            <!-- Row 3 (Account Info) -->
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 pt-4 border-t border-gray-100 mt-4">
                                <div>
                                    <label class="block text-xs font-bold text-gray-700 uppercase mb-2">Username <span
                                            class="text-red-500">*</span></label>
                                    <input type="text" name="username" required placeholder="Choose a username"
                                        class="w-full px-4 py-3 bg-gray-50 border border-gray-200 rounded-lg text-sm focus:bg-white focus:border-indigo-500 outline-none transition-colors">
                                </div>
                                <div>
                                    <label class="block text-xs font-bold text-gray-700 uppercase mb-2">Password <span
                                            class="text-red-500">*</span></label>
                                    <input type="password" name="password" required placeholder="Create a password"
                                        class="w-full px-4 py-3 bg-gray-50 border border-gray-200 rounded-lg text-sm focus:bg-white focus:border-indigo-500 outline-none transition-colors">
                                </div>
                            </div>

                            <!-- Fee Info Box -->
                            <div
                                class="mt-8 border border-indigo-100 bg-indigo-50/50 rounded-xl p-6 text-center relative overflow-hidden">
                                <div class="absolute -right-6 -top-6 text-indigo-100 opacity-50 transform rotate-12">
                                    <i class="fas fa-tag text-9xl"></i>
                                </div>
                                <p class="text-indigo-600 font-bold text-sm uppercase tracking-wider mb-2"><i
                                        class="fas fa-tag mr-1"></i> Membership Fee</p>
                                <div class="text-4xl font-extrabold text-gray-800 mb-2">â‚¹ 5,000</div>
                                <p class="text-xs text-gray-500">One-time registration fee for lifetime membership</p>

                                <div
                                    class="flex items-center justify-center gap-4 mt-4 text-[10px] text-gray-500 font-semibold uppercase tracking-wide">
                                    <span class="flex items-center"><i
                                            class="fas fa-check-circle text-green-500 mr-1"></i> Lifetime Access</span>
                                    <span class="flex items-center"><i
                                            class="fas fa-check-circle text-green-500 mr-1"></i> All Events
                                        Included</span>
                                    <span class="flex items-center"><i
                                            class="fas fa-check-circle text-green-500 mr-1"></i> Network Benefits</span>
                                </div>
                            </div>

                            <!-- Submit Button -->
                            <button type="submit"
                                class="w-full bg-gradient-to-r from-[#8B5CF6] to-[#EC4899] hover:from-[#7C3AED] hover:to-[#DB2777] text-white font-bold py-4 rounded-xl shadow-lg hover:shadow-xl hover:-translate-y-0.5 transition-all duration-300 flex items-center justify-center gap-2 group">
                                Proceed to Payment <i
                                    class="fas fa-arrow-right group-hover:translate-x-1 transition-transform"></i>
                            </button>

                        </form>

                        <div class="text-center mt-6">
                            <p class="text-sm text-gray-500">Already a member? <a href="/auth/login"
                                    class="text-indigo-600 font-bold hover:underline">Log in here</a></p>
                        </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

    <%- include('../partials/footer') %>