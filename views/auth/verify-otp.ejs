<%- include('../partials/header') %>

    <main
        class="flex-grow flex items-center justify-center py-20 px-4 relative min-h-[calc(100vh-120px)] bg-cover bg-center"
        style="background-image: url('/images/HOME%20PAGE%20PHOTOS%20NSM/event%204.jpg');">
        <div class="absolute inset-0 bg-[#0A2040]/70 backdrop-blur-[2px]"></div>

        <div class="relative max-w-md w-full z-10">
            <div class="bg-white rounded-[2rem] shadow-2xl overflow-hidden border border-white/20">
                <div class="bg-gradient-to-r from-[#0A2040] to-[#113061] p-8 text-center">
                    <div
                        class="inline-flex items-center justify-center w-16 h-16 bg-white/10 rounded-2xl mb-4 border border-white/20">
                        <svg class="w-8 h-8 text-[#FFD700]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </div>
                    <h2 class="text-2xl font-bold text-white tracking-tight uppercase">Verify Email</h2>
                    <p class="text-blue-100/70 text-sm mt-1 uppercase tracking-widest font-semibold">Enter OTP sent to
                        your email</p>
                </div>

                <div class="p-8 sm:p-10">
                    <%- include('../partials/messages') %>

                        <form class="space-y-6" action="/auth/verify-otp" method="POST">
                            <div class="space-y-2">
                                <label for="otp"
                                    class="block text-xs font-bold text-gray-500 uppercase tracking-widest ml-1 text-center">One-Time
                                    Password</label>
                                <input id="otp" name="otp" type="text" required maxlength="6"
                                    class="block w-full px-5 py-5 bg-gray-50 border border-gray-200 rounded-xl text-gray-900 focus:outline-none focus:ring-2 focus:ring-[#0A2040] focus:border-transparent transition-all shadow-sm text-center text-3xl font-bold tracking-[10px]"
                                    placeholder="000000">
                            </div>

                            <div class="pt-4">
                                <button type="submit"
                                    class="w-full flex justify-center items-center py-4 px-6 border border-transparent text-sm font-bold rounded-xl text-white bg-[#0A2040] hover:bg-[#113061] transition-all shadow-lg active:scale-[0.98] uppercase tracking-widest">
                                    Verify & Register
                                </button>
                            </div>

                            <div class="text-center pt-8 border-t border-gray-100 mt-8">
                                <p class="text-xs font-bold text-gray-400 uppercase tracking-widest">
                                    Didn't receive the code?
                                    <a href="/auth/register"
                                        class="text-[#0A2040] hover:text-blue-700 ml-1 hover:underline">Resend</a>
                                </p>
                            </div>
                        </form>
                </div>
            </div>
        </div>
    </main>

    <%- include('../partials/footer') %>