<%- include('partials/header') %>

    <div class="bg-gray-50 min-h-screen py-12">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

            <!-- Header Section -->
            <div class="mb-10">
                <h1 class="text-3xl font-bold text-[#0A2040] mb-3">Business Directory</h1>
                <p class="text-gray-600 text-sm md:text-base">
                    Support alumni-owned businesses. From startups to established enterprises, discover the
                    entrepreneurial spirit of NSMOSA.
                </p>
            </div>

            <!-- Search Bar -->
            <div class="bg-white rounded-lg p-2 shadow-sm border border-gray-200 mb-12 flex flex-col md:flex-row gap-2">
                <input type="text" placeholder="Search by business name, industry, or location..."
                    class="flex-grow px-4 py-3 text-gray-700 bg-transparent focus:outline-none placeholder-gray-400">
                <button
                    class="bg-[#0A2040] text-white px-8 py-3 rounded-md font-medium hover:bg-blue-900 transition-colors flex items-center justify-center gap-2 shadow-lg shadow-blue-900/20">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                    </svg>
                    Search
                </button>
            </div>

            <!-- Directory Grid -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">

                <!-- Business 1 -->
                <div
                    class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-2xl transition-all duration-300 group border border-gray-100 flex flex-col">
                    <div class="h-48 bg-gray-200 relative overflow-hidden">
                        <!-- Placeholder Cover -->
                        <img src="https://images.unsplash.com/photo-1542744173-8e7e53415bb0?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80"
                            alt="TechNova Solutions"
                            class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500">
                        <div
                            class="absolute top-4 right-4 bg-white px-3 py-1 rounded-full text-xs font-bold text-[#0A2040] shadow-sm uppercase tracking-wide">
                            Technology</div>
                    </div>
                    <div class="p-6 flex flex-col flex-grow">
                        <div class="flex items-start justify-between mb-4">
                            <div>
                                <h3
                                    class="text-xl font-bold text-[#0A2040] mb-1 group-hover:text-blue-700 transition-colors">
                                    TechNova Solutions</h3>
                                <p class="text-sm text-gray-500">Founded by <span
                                        class="font-semibold text-gray-700">Rajesh Verma</span> (Class of 2005)</p>
                            </div>
                        </div>
                        <p class="text-gray-600 text-sm mb-6 flex-grow line-clamp-3">
                            Leading provider of custom software development and cloud migration services for enterprise
                            clients.
                        </p>

                        <div class="flex items-center text-xs text-gray-500 mb-6">
                            <svg class="w-4 h-4 mr-1 text-[#0A2040]" fill="none" stroke="currentColor"
                                viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                            </svg>
                            Hyderabad, India
                        </div>

                        <div class="grid grid-cols-2 gap-3 mt-auto">
                            <button
                                class="px-4 py-2 bg-gray-50 text-[#0A2040] text-sm font-semibold rounded-lg hover:bg-gray-100 transition-colors border border-gray-200">
                                View Details
                            </button>
                            <button
                                class="px-4 py-2 bg-[#0A2040] text-white text-sm font-semibold rounded-lg hover:bg-blue-900 transition-colors shadow-md">
                                Contact
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Business 2 -->
                <div
                    class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-2xl transition-all duration-300 group border border-gray-100 flex flex-col">
                    <div class="h-48 bg-gray-200 relative overflow-hidden">
                        <img src="https://images.unsplash.com/photo-1556740758-90de374c12ad?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80"
                            alt="GreenLeaf Organics"
                            class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500">
                        <div
                            class="absolute top-4 right-4 bg-white px-3 py-1 rounded-full text-xs font-bold text-green-700 shadow-sm uppercase tracking-wide">
                            Retail</div>
                    </div>
                    <div class="p-6 flex flex-col flex-grow">
                        <div class="flex items-start justify-between mb-4">
                            <div>
                                <h3
                                    class="text-xl font-bold text-[#0A2040] mb-1 group-hover:text-blue-700 transition-colors">
                                    GreenLeaf Organics</h3>
                                <p class="text-sm text-gray-500">Founded by <span
                                        class="font-semibold text-gray-700">Sneha Reddy</span> (Class of 2011)</p>
                            </div>
                        </div>
                        <p class="text-gray-600 text-sm mb-6 flex-grow line-clamp-3">
                            A chain of organic grocery stores promoting sustainable living and farm-to-table produce.
                        </p>

                        <div class="flex items-center text-xs text-gray-500 mb-6">
                            <svg class="w-4 h-4 mr-1 text-[#0A2040]" fill="none" stroke="currentColor"
                                viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                            </svg>
                            Bangalore, India
                        </div>

                        <div class="grid grid-cols-2 gap-3 mt-auto">
                            <button
                                class="px-4 py-2 bg-gray-50 text-[#0A2040] text-sm font-semibold rounded-lg hover:bg-gray-100 transition-colors border border-gray-200">
                                View Details
                            </button>
                            <button
                                class="px-4 py-2 bg-[#0A2040] text-white text-sm font-semibold rounded-lg hover:bg-blue-900 transition-colors shadow-md">
                                Visit Store
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Business 3 -->
                <div
                    class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-2xl transition-all duration-300 group border border-gray-100 flex flex-col">
                    <div class="h-48 bg-gray-200 relative overflow-hidden">
                        <img src="https://images.unsplash.com/photo-1454165804606-c3d57bc86b40?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80"
                            alt="Apex Consulting Group"
                            class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500">
                        <div
                            class="absolute top-4 right-4 bg-white px-3 py-1 rounded-full text-xs font-bold text-blue-800 shadow-sm uppercase tracking-wide">
                            Consulting</div>
                    </div>
                    <div class="p-6 flex flex-col flex-grow">
                        <div class="flex items-start justify-between mb-4">
                            <div>
                                <h3
                                    class="text-xl font-bold text-[#0A2040] mb-1 group-hover:text-blue-700 transition-colors">
                                    Apex Consulting Group</h3>
                                <p class="text-sm text-gray-500">Founded by <span
                                        class="font-semibold text-gray-700">Vikram Singh</span> (Class of 1998)</p>
                            </div>
                        </div>
                        <p class="text-gray-600 text-sm mb-6 flex-grow line-clamp-3">
                            Strategic management consulting for manufacturing and logistics sectors with a focus on
                            operational efficiency.
                        </p>

                        <div class="flex items-center text-xs text-gray-500 mb-6">
                            <svg class="w-4 h-4 mr-1 text-[#0A2040]" fill="none" stroke="currentColor"
                                viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                            </svg>
                            Mumbai, India
                        </div>

                        <div class="grid grid-cols-2 gap-3 mt-auto">
                            <button
                                class="px-4 py-2 bg-gray-50 text-[#0A2040] text-sm font-semibold rounded-lg hover:bg-gray-100 transition-colors border border-gray-200">
                                View Details
                            </button>
                            <button
                                class="px-4 py-2 bg-[#0A2040] text-white text-sm font-semibold rounded-lg hover:bg-blue-900 transition-colors shadow-md">
                                Contact
                            </button>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <%- include('partials/footer') %>