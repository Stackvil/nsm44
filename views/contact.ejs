<%- include('partials/header') %>

    <div class="bg-gray-50 min-h-screen py-16 font-sans">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <!-- Page Title -->
            <div class="mb-12">
                <h1 class="text-3xl font-bold text-[#002845] uppercase tracking-wide">Contact NSM Old Students Association</h1>
                <div class="h-1 w-24 bg-[#005f7f] mt-2"></div>
                <p class="mt-6 text-gray-600 text-sm">For any queries related to alumni registration, events or contributions, please write to us or call the NSM Alumni Office.</p>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                <!-- Left Column: Contact Info Cards -->
                <div class="space-y-6 lg:col-span-1">
                    <!-- Office Address Card -->
                    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 flex items-start gap-4 hover:shadow-md transition-shadow duration-300">
                        <div class="bg-[#002447] p-3 rounded-lg text-white shrink-0">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                            </svg>
                        </div>
                        <div>
                            <h3 class="text-[#002845] font-bold text-lg mb-1">Office Address</h3>
                            <div class="text-sm text-gray-600 space-y-1">
                                <p class="font-medium">NSM Old Students Association</p>
                                <p>NSM School</p>
                                <p>Patamata, Benz Circle, Vijayawada, Andhra Pradesh 520010</p>
                            </div>
                        </div>
                    </div>

                    <!-- Phone Number Card -->
                    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 flex items-start gap-4 hover:shadow-md transition-shadow duration-300">
                        <div class="bg-[#002447] p-3 rounded-lg text-white shrink-0">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                            </svg>
                        </div>
                        <div>
                            <h3 class="text-[#002845] font-bold text-lg mb-1">Phone Number</h3>
                            <div class="text-sm text-gray-600 space-y-1">
                                <p>+91-90000 00000</p>
                                <p>+91-44-00000000</p>
                            </div>
                        </div>
                    </div>

                    <!-- Email Address Card -->
                    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 flex items-start gap-4 hover:shadow-md transition-shadow duration-300">
                        <div class="bg-[#002447] p-3 rounded-lg text-white shrink-0">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                            </svg>
                        </div>
                        <div>
                            <h3 class="text-[#002845] font-bold text-lg mb-1">Email Address</h3>
                            <div class="text-sm text-gray-600">
                                <p>alumininsm@gmail.com</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Right Column: Contact Form -->
                <div class="lg:col-span-2">
                    <div class="bg-white rounded-xl shadow-lg border border-gray-100 p-8">
                        <div class="flex items-center gap-2 mb-6 border-b border-[#002845] pb-4">
                            <svg class="w-6 h-6 text-[#002845]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
                            </svg>
                            <h2 class="text-2xl font-bold text-[#002845]">Send Us a Message</h2>
                        </div>

                        <form class="space-y-6">
                            <!-- Name & Mobile Number Row -->
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                <!-- Name -->
                                <div>
                                    <label class="block text-sm font-bold text-[#002845] mb-2">
                                        <i class="fas fa-user mr-1 text-orange-500"></i> Name <span class="text-red-500">*</span>
                                    </label>
                                    <input type="text" placeholder="Enter your full name"
                                        class="w-full border border-gray-200 rounded-md p-3 text-sm focus:border-[#002845] focus:ring-1 focus:ring-[#002845] outline-none transition-colors">
                                </div>
                            </div>

                             <!-- Email & Mobile Row -->
                             <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                <!-- Email -->
                                <div>
                                    <label class="block text-sm font-bold text-[#002845] mb-2">
                                        <i class="fas fa-envelope mr-1 text-orange-500"></i> Email <span class="text-red-500">*</span>
                                    </label>
                                    <input type="email" placeholder="your.email@example.com"
                                        class="w-full border border-gray-200 rounded-md p-3 text-sm focus:border-[#002845] focus:ring-1 focus:ring-[#002845] outline-none transition-colors">
                                </div>

                                <!-- Mobile Number -->
                                <div>
                                    <label class="block text-sm font-bold text-[#002845] mb-2">
                                        <i class="fas fa-mobile-alt mr-1 text-orange-500"></i> Mobile Number <span class="text-red-500">*</span>
                                    </label>
                                    <input type="tel" placeholder="+91-XXXXXXXXXX"
                                        class="w-full border border-gray-200 rounded-md p-3 text-sm focus:border-[#002845] focus:ring-1 focus:ring-[#002845] outline-none transition-colors">
                                </div>
                            </div>

                            <!-- City -->
                            <div>
                                <label class="block text-sm font-bold text-[#002845] mb-2">
                                    <i class="fas fa-city mr-1 text-orange-500"></i> City
                                </label>
                                <input type="text" placeholder="Enter your city"
                                    class="w-full border border-gray-200 rounded-md p-3 text-sm focus:border-[#002845] focus:ring-1 focus:ring-[#002845] outline-none transition-colors">
                            </div>

                            <!-- Message -->
                            <div>
                                <label class="block text-sm font-bold text-[#002845] mb-2">
                                    <i class="fas fa-comment-alt mr-1 text-orange-500"></i> Message <span class="text-red-500">*</span>
                                </label>
                                <textarea rows="5" placeholder="Type your message here..."
                                    class="w-full border border-gray-200 rounded-md p-3 text-sm focus:border-[#002845] focus:ring-1 focus:ring-[#002845] outline-none transition-colors"></textarea>
                            </div>

                            <!-- Submit Button -->
                            <div>
                                <button type="submit"
                                    class="w-full bg-[#002845] text-white font-bold py-3 px-6 rounded-md hover:bg-[#00182b] transition-colors duration-300 flex items-center justify-center gap-2 shadow-lg">
                                    Submit Now 
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                                    </svg>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Font Awesome for Icons in Form Labels (optional fallback if SVGs purely desired, but using icons in labels matches design vibe) -->
     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

    <%- include('partials/footer') %>