<%- include('partials/header') %>

    <div class="bg-gray-50 min-h-screen py-12" x-data="eventsHandler()" x-cloak>
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

            <!-- Main Header -->
            <h1
                class="text-4xl font-extrabold text-[#002845] mb-4 uppercase tracking-wider border-b-4 border-[#006F78] inline-block pb-2">
                NSM ALUMNI EVENTS
            </h1>

            <!-- View 1: Categories Selection -->
            <div x-show="!currentCategory" x-transition.opacity.duration.500ms class="mt-16 text-center">
                <div class="flex flex-col md:flex-row gap-8 justify-center items-center">

                    <!-- Social Events Card -->
                    <div @click="selectCategory('social_events')"
                        class="group relative bg-[#002845] w-72 h-72 rounded-3xl shadow-xl cursor-pointer overflow-hidden transform hover:-translate-y-2 transition-all duration-300 flex flex-col justify-center items-center text-center p-6">
                        <div
                            class="absolute inset-0 bg-white/5 opacity-0 group-hover:opacity-10 transition-opacity duration-300">
                        </div>
                        <div class="mb-4 text-white">
                            <svg class="w-12 h-12 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z">
                                </path>
                            </svg>
                        </div>
                        <h2 class="text-2xl font-bold text-white mb-2">Social Events</h2>
                        <span
                            class="text-sm font-semibold text-white/80 group-hover:text-white flex items-center gap-1 transition-colors">
                            View Years <span class="group-hover:translate-x-1 transition-transform">→</span>
                        </span>
                    </div>

                    <!-- NSMOSA Events Card -->
                    <div @click="selectCategory('nsmosa_events')"
                        class="group relative bg-gradient-to-br from-amber-400 to-orange-500 w-72 h-72 rounded-3xl shadow-xl cursor-pointer overflow-hidden transform hover:-translate-y-2 transition-all duration-300 flex flex-col justify-center items-center text-center p-6">
                        <div
                            class="absolute inset-0 bg-white/20 opacity-0 group-hover:opacity-100 transition-opacity duration-500 rounded-3xl blur-xl">
                        </div>
                        <div class="mb-4 text-white relative z-10">
                            <svg class="w-12 h-12 mx-auto" fill="currentColor" viewBox="0 0 20 20">
                                <path
                                    d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z">
                                </path>
                            </svg>
                        </div>
                        <h2 class="text-2xl font-bold text-white mb-2 relative z-10">NSMOSA Events</h2>
                        <span
                            class="text-sm font-semibold text-white/90 group-hover:text-white flex items-center gap-1 transition-colors relative z-10">
                            View Gallery <span class="group-hover:translate-x-1 transition-transform">→</span>
                        </span>
                    </div>

                </div>
            </div>

            <!-- View 2: Sub-Level (Years or Events List) -->
            <div x-show="currentCategory" x-transition.opacity.duration.300ms class="mt-8">

                <!-- Breadcrumb -->
                <button @click="resetCategory()"
                    class="flex items-center text-[#002845] font-bold hover:text-[#006F78] mb-6 transition-colors">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                    </svg>
                    Back to Categories
                </button>

                <h2 class="text-3xl font-bold text-[#002845] mb-8" x-text="categoryTitle"></h2>

                <!-- Grid Container -->
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">

                    <!-- Loop through items -->
                    <template x-for="item in filteredItems" :key="item.id">
                        <div @click="openGallery(item)"
                            class="bg-white rounded-2xl shadow-md hover:shadow-xl transition-all duration-300 cursor-pointer overflow-hidden group border border-gray-100 flex flex-col h-full">

                            <!-- Image Area -->
                            <div class="h-56 overflow-hidden relative bg-gray-200">
                                <template x-if="item.imageUrl">
                                    <img :src="item.imageUrl"
                                        class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-700">
                                </template>
                                <template x-if="!item.imageUrl">
                                    <div class="w-full h-full flex items-center justify-center text-gray-400">
                                        <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z">
                                            </path>
                                        </svg>
                                    </div>
                                </template>

                                <!-- Overlay with count -->
                                <div
                                    class="absolute bottom-0 right-0 bg-[#002845]/80 text-white text-xs px-3 py-1 rounded-tl-lg backdrop-blur-sm">
                                    <span x-text="'View Photos'"></span>
                                </div>
                            </div>

                            <!-- Content Area -->
                            <div class="p-5 flex-1 flex flex-col justify-between">
                                <div>
                                    <h3 class="text-xl font-bold text-gray-800 mb-2 truncate"
                                        x-text="item.title || item.year"></h3>
                                    <p class="text-sm text-gray-500 line-clamp-2" x-text="item.description"></p>

                                    <!-- Meta Details (Date, Batch, Year) -->
                                    <div class="mt-3 flex flex-wrap gap-2 text-xs font-semibold text-gray-600">
                                        <template x-if="item.eventDate">
                                            <span
                                                class="bg-blue-50 text-blue-700 px-2 py-1 rounded border border-blue-100 flex items-center gap-1">
                                                <svg class="w-3 h-3" fill="none" stroke="currentColor"
                                                    viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round"
                                                        stroke-width="2"
                                                        d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z">
                                                    </path>
                                                </svg>
                                                <span x-text="item.eventDate"></span>
                                            </span>
                                        </template>
                                        <template x-if="item.batch">
                                            <span
                                                class="bg-purple-50 text-purple-700 px-2 py-1 rounded border border-purple-100 flex items-center gap-1">
                                                <svg class="w-3 h-3" fill="none" stroke="currentColor"
                                                    viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round"
                                                        stroke-width="2"
                                                        d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z">
                                                    </path>
                                                </svg>
                                                <span x-text="'Batch: ' + item.batch"></span>
                                            </span>
                                        </template>
                                        <template x-if="item.year && !item.eventDate">
                                            <span
                                                class="bg-gray-100 text-gray-600 px-2 py-1 rounded border border-gray-200">
                                                <span x-text="item.year"></span>
                                            </span>
                                        </template>
                                    </div>

                                </div>
                                <div class="mt-4 pt-4 border-t border-gray-100 flex justify-between items-center">
                                    <span class="text-sm font-semibold text-[#f59e0b] group-hover:underline">View
                                        Album</span>
                                </div>
                            </div>

                        </div>
                    </template>

                    <!-- Empty State -->
                    <div x-show="filteredItems.length === 0" class="col-span-full py-12 text-center text-gray-400">
                        <p class="text-xl">Coming Soon</p>
                    </div>

                </div>
            </div>

            <!-- Gallery Modal (Grid View + Lightbox) -->
            <div x-show="lightboxOpen" class="fixed inset-0 z-[60] bg-white/95 overflow-y-auto" x-transition.opacity>

                <!-- Close Button -->
                <button @click="closeGallery()"
                    class="fixed top-6 right-6 text-gray-500 hover:text-gray-900 z-[70] transition-colors p-2 bg-gray-100 rounded-full hover:bg-gray-200">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12">
                        </path>
                    </svg>
                </button>

                <!-- 1. Grid View Mode -->
                <div x-show="!sliderMode" class="min-h-full p-4 md:p-10">
                    <div class="max-w-7xl mx-auto">
                        <h2 class="text-3xl font-bold text-gray-900 mb-2 text-center" x-text="currentPhotoTitle"></h2>
                        <p class="text-gray-500 text-center mb-10" x-text="galleryImages.length + ' Photos'"></p>

                        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 md:gap-6">
                            <template x-for="(img, idx) in galleryImages" :key="idx">
                                <div @click="openSlider(idx)"
                                    class="group relative aspect-square cursor-pointer rounded-xl overflow-hidden bg-gray-100 border border-transparent hover:border-blue-500/30 transition-all duration-300 hover:-translate-y-1 hover:shadow-2xl">
                                    <img :src="img"
                                        class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110 opacity-100">
                                    <div class="absolute inset-0 bg-white/0 group-hover:bg-white/10 transition-colors">
                                    </div>
                                </div>
                            </template>
                        </div>
                    </div>
                </div>

                <!-- 2. Slider View Mode -->
                <div x-show="sliderMode"
                    class="fixed inset-0 z-[65] bg-white flex flex-col items-center justify-center p-4">
                    <!-- Back to Grid Button -->
                    <button @click="sliderMode = false"
                        class="absolute top-6 left-6 text-gray-600 hover:text-gray-900 z-[70] flex items-center gap-2 transition-colors px-4 py-2 bg-gray-100 rounded-full hover:bg-gray-200">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                        </svg>
                        <span class="text-sm font-medium">All Photos</span>
                    </button>

                    <div class="relative w-full max-w-7xl h-[80vh] flex items-center justify-center">
                        <!-- Prev -->
                        <button @click.stop="prevImage()" x-show="galleryImages.length > 1"
                            class="absolute left-2 md:-left-4 text-gray-700 p-4 hover:bg-gray-100 rounded-full transition z-50 shadow-sm border border-gray-100 bg-white/50 backdrop-blur-sm">
                            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M15 19l-7-7 7-7"></path>
                            </svg>
                        </button>

                        <img :src="currentPhoto" class="w-full h-full object-contain rounded-md drop-shadow-2xl">

                        <!-- Next -->
                        <button @click.stop="nextImage()" x-show="galleryImages.length > 1"
                            class="absolute right-2 md:-right-4 text-gray-700 p-4 hover:bg-gray-100 rounded-full transition z-50 shadow-sm border border-gray-100 bg-white/50 backdrop-blur-sm">
                            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7">
                                </path>
                            </svg>
                        </button>
                    </div>

                    <!-- Caption / Counter -->
                    <div class="absolute bottom-6 left-0 right-0 text-center">
                        <p class="text-gray-900 font-medium text-lg" x-text="currentPhotoTitle"></p>
                        <p class="text-gray-500 text-sm mt-1"
                            x-text="(currentImageIndex + 1) + ' of ' + galleryImages.length"></p>
                    </div>
                </div>

            </div>

        </div>
    </div>

    <!-- Data Injection -->
    <script id="events-data" type="application/json">
    <%- JSON.stringify(events) %>
</script>

    <script src="//unpkg.com/alpinejs" defer></script>
    <script>
        function eventsHandler() {
            let allEvents = [];
            try {
                allEvents = JSON.parse(document.getElementById('events-data').textContent);
            } catch (e) { console.error('Error parsing events', e) }

            return {
                currentCategory: null, // 'social_events' or 'nsmosa_events'
                allData: allEvents,
                lightboxOpen: false,
                sliderMode: false,
                galleryImages: [],
                currentImageIndex: 0,
                currentPhotoTitle: '',

                get currentPhoto() {
                    return this.galleryImages[this.currentImageIndex] || '';
                },

                // ... (existing category getters) ... // 

                get categoryTitle() {
                    if (this.currentCategory === 'social_events') return 'Social Events Years';
                    if (this.currentCategory === 'nsmosa_events') return 'NSMOSA Events';
                    return '';
                },

                get filteredItems() {
                    // ... existing logic ...
                    let rawItems = [];

                    if (this.currentCategory === 'social_events') {
                        rawItems = this.allData.filter(item =>
                            item.section === 'social_event' ||
                            item.section === 'social_events' ||
                            item.section === 'social' ||
                            (item.section === 'events' && item.year)
                        );
                    } else if (this.currentCategory === 'nsmosa_events') {
                        rawItems = this.allData.filter(item =>
                            item.section === 'nsmosa_event' ||
                            item.section === 'nsmosa_events' ||
                            item.section === 'nsmosa'
                        );
                    }

                    // Group items
                    const groups = {};
                    rawItems.forEach(item => {
                        const key = (item.title || 'Untitled').trim() + '-' + (item.year || 'NoYear');
                        if (!groups[key]) {
                            groups[key] = {
                                ...item,
                                images: item.imageUrl ? [item.imageUrl] : []
                            };
                        } else {
                            if (item.imageUrl) {
                                groups[key].images.push(item.imageUrl);
                            }
                        }
                    });

                    return Object.values(groups);
                },

                selectCategory(cat) {
                    this.currentCategory = cat;
                },

                resetCategory() {
                    this.currentCategory = null;
                },

                openGallery(item) {
                    this.sliderMode = false; // Start in Grid Mode
                    this.galleryImages = item.images && item.images.length > 0 ? item.images : (item.imageUrl ? [item.imageUrl] : []);
                    this.currentImageIndex = 0;
                    this.currentPhotoTitle = item.title;
                    if (this.galleryImages.length > 0) {
                        this.lightboxOpen = true;
                    }
                },

                openSlider(index) {
                    this.currentImageIndex = index;
                    this.sliderMode = true;
                },

                closeGallery() {
                    this.lightboxOpen = false;
                    this.sliderMode = false;
                },

                nextImage() {
                    if (this.galleryImages.length > 1) {
                        this.currentImageIndex = (this.currentImageIndex + 1) % this.galleryImages.length;
                    }
                },

                prevImage() {
                    if (this.galleryImages.length > 1) {
                        this.currentImageIndex = (this.currentImageIndex - 1 + this.galleryImages.length) % this.galleryImages.length;
                    }
                }
            }
        }
    </script>

    <style>
        [x-cloak] {
            display: none !important;
        }
    </style>

    <%- include('partials/footer') %>