<%- include('partials/header') %>

    <div class="bg-gray-50 min-h-screen py-12" x-data="galleryHandler()" x-cloak>
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

            <!-- Main Header -->
            <div class="text-center mb-12">
                <h1
                    class="text-4xl font-extrabold text-[#002845] mb-4 uppercase tracking-wider border-b-4 border-[#eab308] inline-block pb-2">
                    Photo Gallery
                </h1>
                <p class="text-gray-600 max-w-2xl mx-auto text-lg">Explore our enhanced collection of memories.</p>
            </div>

            <!-- Albums Grid -->
            <div x-show="filteredItems.length > 0" x-transition.opacity.duration.500ms>
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">

                    <!-- Loop through albums -->
                    <template x-for="item in filteredItems" :key="item.id">
                        <div @click="openGallery(item)"
                            class="bg-white rounded-2xl shadow-md hover:shadow-xl transition-all duration-300 cursor-pointer overflow-hidden group border border-gray-100 flex flex-col h-full">

                            <!-- Image Area -->
                            <div class="h-56 overflow-hidden relative bg-gray-200">
                                <template x-if="item.imageUrl">
                                    <img :src="item.imageUrl"
                                        class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-700">
                                </template>
                                <template x-if="!item.imageUrl">
                                    <div class="w-full h-full flex items-center justify-center text-gray-400">
                                        <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z">
                                            </path>
                                        </svg>
                                    </div>
                                </template>

                                <!-- Overlay with count -->
                                <div
                                    class="absolute bottom-0 right-0 bg-[#eab308]/90 text-white text-xs px-3 py-1 rounded-tl-lg backdrop-blur-sm shadow-sm font-bold">
                                    <span x-text="item.images.length + ' Photos'"></span>
                                </div>
                            </div>

                            <!-- Content Area -->
                            <div class="p-5 flex-1 flex flex-col justify-between">
                                <div>
                                    <h3 class="text-xl font-bold text-gray-800 mb-2 truncate"
                                        x-text="item.title || 'Gallery ' + item.year"></h3>

                                    <!-- Meta Details -->
                                    <div class="mt-2 flex flex-wrap gap-2 text-xs font-semibold text-gray-600">
                                        <template x-if="item.year">
                                            <span
                                                class="bg-yellow-50 text-yellow-700 px-2 py-1 rounded border border-yellow-100 flex items-center gap-1">
                                                <svg class="w-3 h-3" fill="none" stroke="currentColor"
                                                    viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round"
                                                        stroke-width="2"
                                                        d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z">
                                                    </path>
                                                </svg>
                                                <span x-text="item.year"></span>
                                            </span>
                                        </template>
                                    </div>
                                </div>
                                <div class="mt-4 pt-4 border-t border-gray-100 flex justify-between items-center">
                                    <span class="text-sm font-semibold text-[#eab308] group-hover:underline">View
                                        Album</span>
                                </div>
                            </div>

                        </div>
                    </template>
                </div>
            </div>

            <!-- Empty State -->
            <div x-show="filteredItems.length === 0" class="text-center py-20">
                <div
                    class="w-20 h-20 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4 text-gray-400">
                    <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z">
                        </path>
                    </svg>
                </div>
                <p class="text-xl text-gray-500">No galleries found.</p>
            </div>

            <!-- Lightbox Modal (Reused from events.ejs) -->
            <div x-show="lightboxOpen" class="fixed inset-0 z-[60] bg-white/95 overflow-y-auto" x-transition.opacity>

                <!-- Close Button -->
                <button @click="closeGallery()"
                    class="fixed top-6 right-6 text-gray-500 hover:text-gray-900 z-[70] transition-colors p-2 bg-gray-100 rounded-full hover:bg-gray-200">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12">
                        </path>
                    </svg>
                </button>

                <!-- 1. Grid View Mode -->
                <div x-show="!sliderMode" class="min-h-full p-4 md:p-10">
                    <div class="max-w-7xl mx-auto">
                        <h2 class="text-3xl font-bold text-gray-900 mb-2 text-center" x-text="currentPhotoTitle"></h2>
                        <p class="text-gray-500 text-center mb-10" x-text="galleryImages.length + ' Photos'"></p>

                        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 md:gap-6">
                            <template x-for="(img, idx) in galleryImages" :key="idx">
                                <div @click="openSlider(idx)"
                                    class="group relative aspect-square cursor-pointer rounded-xl overflow-hidden bg-gray-100 border border-transparent hover:border-yellow-500/30 transition-all duration-300 hover:-translate-y-1 hover:shadow-2xl">
                                    <img :src="img"
                                        class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110 opacity-100">
                                    <div class="absolute inset-0 bg-white/0 group-hover:bg-white/10 transition-colors">
                                    </div>
                                </div>
                            </template>
                        </div>
                    </div>
                </div>

                <!-- 2. Slider View Mode -->
                <div x-show="sliderMode"
                    class="fixed inset-0 z-[65] bg-white flex flex-col items-center justify-center p-4">
                    <!-- Back to Grid Button -->
                    <button @click="sliderMode = false"
                        class="absolute top-6 left-6 text-gray-600 hover:text-gray-900 z-[70] flex items-center gap-2 transition-colors px-4 py-2 bg-gray-100 rounded-full hover:bg-gray-200">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                        </svg>
                        <span class="text-sm font-medium">All Photos</span>
                    </button>

                    <div class="relative w-full max-w-7xl h-[80vh] flex items-center justify-center">
                        <!-- Prev -->
                        <button @click.stop="prevImage()" x-show="galleryImages.length > 1"
                            class="absolute left-2 md:-left-4 text-gray-700 p-4 hover:bg-gray-100 rounded-full transition z-50 shadow-sm border border-gray-100 bg-white/50 backdrop-blur-sm">
                            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M15 19l-7-7 7-7"></path>
                            </svg>
                        </button>

                        <img :src="currentPhoto" class="w-full h-full object-contain rounded-md drop-shadow-2xl">

                        <!-- Next -->
                        <button @click.stop="nextImage()" x-show="galleryImages.length > 1"
                            class="absolute right-2 md:-right-4 text-gray-700 p-4 hover:bg-gray-100 rounded-full transition z-50 shadow-sm border border-gray-100 bg-white/50 backdrop-blur-sm">
                            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7">
                                </path>
                            </svg>
                        </button>
                    </div>

                    <!-- Caption / Counter -->
                    <div class="absolute bottom-6 left-0 right-0 text-center">
                        <p class="text-gray-900 font-medium text-lg" x-text="currentPhotoTitle"></p>
                        <p class="text-gray-500 text-sm mt-1"
                            x-text="(currentImageIndex + 1) + ' of ' + galleryImages.length"></p>
                    </div>
                </div>

            </div>

        </div>
    </div>

    <!-- Data Injection -->
    <script id="gallery-data" type="application/json">
    <%- JSON.stringify(gallery) %>
</script>

    <script src="//unpkg.com/alpinejs" defer></script>
    <script>
        function galleryHandler() {
            let allItems = [];
            try {
                allItems = JSON.parse(document.getElementById('gallery-data').textContent);
            } catch (e) {
                console.error('Error parsing gallery data', e)
            }

            return {
                allData: allItems,
                lightboxOpen: false,
                sliderMode: false,
                galleryImages: [],
                currentImageIndex: 0,
                currentPhotoTitle: '',

                get currentPhoto() {
                    return this.galleryImages[this.currentImageIndex] || '';
                },

                get filteredItems() {
                    // Filter for Photo Gallery items
                    const rawItems = this.allData.filter(item =>
                        item.section === 'photo_gallery' ||
                        item.section === 'home_photo_gallery'
                    );

                    // Group items by Title + Year
                    const groups = {};
                    rawItems.forEach(item => {
                        const key = (item.title || 'Untitled').trim() + '-' + (item.year || 'NoYear');
                        if (!groups[key]) {
                            groups[key] = {
                                ...item,
                                images: item.imageUrl ? [item.imageUrl] : []
                            };
                        } else {
                            if (item.imageUrl) {
                                groups[key].images.push(item.imageUrl);
                            }
                        }
                    });

                    return Object.values(groups);
                },

                openGallery(item) {
                    this.sliderMode = false;
                    this.galleryImages = item.images && item.images.length > 0 ? item.images : (item.imageUrl ? [item.imageUrl] : []);
                    this.currentImageIndex = 0;
                    this.currentPhotoTitle = item.title;
                    if (this.galleryImages.length > 0) {
                        this.lightboxOpen = true;
                    }
                },

                openSlider(index) {
                    this.currentImageIndex = index;
                    this.sliderMode = true;
                },

                closeGallery() {
                    this.lightboxOpen = false;
                    this.sliderMode = false;
                },

                nextImage() {
                    if (this.galleryImages.length > 1) {
                        this.currentImageIndex = (this.currentImageIndex + 1) % this.galleryImages.length;
                    }
                },

                prevImage() {
                    if (this.galleryImages.length > 1) {
                        this.currentImageIndex = (this.currentImageIndex - 1 + this.galleryImages.length) % this.galleryImages.length;
                    }
                }
            }
        }
    </script>

    <style>
        [x-cloak] {
            display: none !important;
        }
    </style>

    <%- include('partials/footer') %>