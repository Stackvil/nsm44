<%- include('partials/header') %>

    <div class="bg-gray-50/50 min-h-screen">
        <!-- Sub-navigation Bar -->
        <div class="bg-white border-b border-gray-200 sticky top-[64px] z-40 shadow-sm">
            <div class="max-w-7xl mx-auto px-4 lg:px-8">
                <div class="flex overflow-x-auto no-scrollbar space-x-12">
                    <!-- My Profile -->
                    <a href="/my-profile"
                        class="flex items-center space-x-2 py-5 border-b-2 border-yellow-500 text-blue-900 font-bold whitespace-nowrap transition-all duration-300 active-nav-tab">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                        </svg>
                        <span class="text-[13px] tracking-wide uppercase">My Profile</span>
                    </a>

                    <!-- Alumni Event -->
                    <a href="/alumni-events"
                        class="flex items-center space-x-2 py-5 text-gray-500 hover:text-blue-900 font-semibold whitespace-nowrap transition-all duration-300">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                        <span class="text-[13px] tracking-wide uppercase">Alumni Event</span>
                    </a>

                    <!-- Alumni Directory -->
                    <a href="#"
                        class="flex items-center space-x-2 py-5 text-gray-500 hover:text-blue-900 font-semibold whitespace-nowrap transition-all duration-300">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                        </svg>
                        <span class="text-[13px] tracking-wide uppercase">Alumni Directory</span>
                    </a>

                    <!-- Business Directory -->
                    <a href="#"
                        class="flex items-center space-x-2 py-5 text-gray-500 hover:text-blue-900 font-semibold whitespace-nowrap transition-all duration-300">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                        </svg>
                        <span class="text-[13px] tracking-wide uppercase">Business Directory</span>
                    </a>

                    <!-- How to Give -->
                    <a href="/how-to-give"
                        class="flex items-center space-x-2 py-5 text-gray-500 hover:text-blue-900 font-semibold whitespace-nowrap transition-all duration-300">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        <span class="text-[13px] tracking-wide uppercase">How to Give</span>
                    </a>

                    <!-- Connect With Us -->
                    <a href="/contact"
                        class="flex items-center space-x-2 py-5 text-gray-500 hover:text-blue-900 font-semibold whitespace-nowrap transition-all duration-300">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                        </svg>
                        <span class="text-[13px] tracking-wide uppercase">Connect With Us</span>
                    </a>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="max-w-7xl mx-auto px-4 lg:px-8 py-12">
            <div class="mb-10">
                <h1 class="text-3xl font-extrabold text-[#0A2040] tracking-tight">My Profile</h1>
                <p class="text-gray-500 mt-2 text-lg">Update your profile information. You can add or edit your details
                    at any time.</p>
            </div>

            <!-- Profile Content -->
            <% if (user) { %>
                <div class="bg-white rounded-[2rem] shadow-xl p-8 lg:p-12 max-w-4xl mx-auto border border-gray-100">
                    <form action="/update-profile" method="POST" enctype="multipart/form-data" class="space-y-8">
                        <!-- Header -->
                        <div class="flex items-center space-x-6 pb-8 border-b border-gray-100">
                            <div class="relative group">
                                <div
                                    class="w-24 h-24 rounded-2xl overflow-hidden shadow-lg border-4 border-white relative">
                                    <% if (user.profileImage) { %>
                                        <img id="profileImagePreview" src="<%= user.profileImage %>" alt="Profile"
                                            class="w-full h-full object-cover">
                                        <% } else { %>
                                            <div id="profileInitial"
                                                class="w-full h-full bg-[#0A2040] flex items-center justify-center text-white text-3xl font-bold">
                                                <%= user.username.charAt(0).toUpperCase() %>
                                            </div>
                                            <% } %>
                                </div>
                                <label for="profileImage"
                                    class="absolute -bottom-2 -right-2 w-8 h-8 bg-blue-600 text-white rounded-full flex items-center justify-center shadow-lg cursor-pointer hover:bg-blue-700 transition-colors z-10">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z" />
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M15 13a3 3 0 11-6 0 3 3 0 016 0z" />
                                    </svg>
                                </label>
                                <input type="file" id="profileImage" name="image" class="hidden" accept="image/*"
                                    onchange="previewImage(this)">
                            </div>

                            <div class="flex-1">
                                <h2 class="text-2xl font-bold text-[#0A2040]">
                                    <%= user.fullName || user.username %>
                                </h2>
                                <p class="text-gray-500 mb-2">
                                    <%= user.email %>
                                </p>
                                <label for="profileImage"
                                    class="text-sm text-blue-600 font-bold hover:text-blue-800 cursor-pointer inline-flex items-center">
                                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12" />
                                    </svg>
                                    Change Profile Photo
                                </label>
                            </div>
                        </div>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                            <!-- Full Name -->
                            <div class="space-y-2">
                                <label class="text-sm font-bold text-gray-700 uppercase tracking-wide">Full Name</label>
                                <input type="text" name="fullName" value="<%= user.fullName %>"
                                    class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-100 outline-none transition-all font-medium text-gray-700">
                            </div>

                            <!-- Email (Read Only) -->
                            <div class="space-y-2">
                                <label class="text-sm font-bold text-gray-400 uppercase tracking-wide">Email
                                    Address</label>
                                <input type="email" value="<%= user.email %>" readonly
                                    class="w-full px-4 py-3 rounded-xl border border-gray-100 bg-gray-50 text-gray-500 font-medium cursor-not-allowed">
                            </div>

                            <!-- Phone -->
                            <div class="space-y-2">
                                <label class="text-sm font-bold text-gray-700 uppercase tracking-wide">Phone
                                    Number</label>
                                <input type="tel" name="phone" value="<%= user.phone || '' %>"
                                    placeholder="+1 (555) 000-0000"
                                    class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-100 outline-none transition-all font-medium text-gray-700">
                            </div>

                            <!-- Graduation Year -->
                            <div class="space-y-2">
                                <label class="text-sm font-bold text-gray-700 uppercase tracking-wide">Graduation
                                    Year</label>
                                <input type="number" name="graduationYear" value="<%= user.graduationYear || '' %>"
                                    placeholder="2024"
                                    class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-100 outline-none transition-all font-medium text-gray-700">
                            </div>

                            <!-- Batch -->
                            <div class="space-y-2">
                                <label class="text-sm font-bold text-gray-700 uppercase tracking-wide">Batch</label>
                                <input type="text" name="batch" value="<%= user.batch || '' %>"
                                    placeholder="Class of '24"
                                    class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-100 outline-none transition-all font-medium text-gray-700">
                            </div>
                            <!-- Role (Read Only) -->
                            <div class="space-y-2">
                                <label class="text-sm font-bold text-gray-400 uppercase tracking-wide">Account
                                    Role</label>
                                <div
                                    class="w-full px-4 py-3 rounded-xl border border-gray-100 bg-gray-50 flex items-center">
                                    <span
                                        class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 uppercase">
                                        <%= user.role %>
                                    </span>
                                </div>
                            </div>
                        </div>

                        <!-- Actions -->
                        <div class="pt-8 border-t border-gray-100 flex items-center justify-end gap-4">
                            <button type="button" onclick="window.history.back()"
                                class="px-6 py-3 text-gray-500 font-bold hover:text-[#0A2040] transition-colors">
                                Cancel
                            </button>
                            <button type="submit"
                                class="px-8 py-3 bg-[#0A2040] text-white font-bold rounded-xl shadow-lg shadow-blue-900/20 hover:bg-blue-900 hover:-translate-y-0.5 transition-all duration-300">
                                Save Changes
                            </button>
                        </div>
                    </form>
                </div>
                <% } else { %>
                    <!-- Login Required Card -->
                    <div class="flex justify-center py-8">
                        <div
                            class="bg-white rounded-[2rem] shadow-2xl p-16 max-w-xl w-full text-center border border-gray-100/50 backdrop-blur-sm relative overflow-hidden group">
                            <!-- Background Decorative Element -->
                            <div
                                class="absolute -top-10 -right-10 w-40 h-40 bg-blue-50 rounded-full opacity-50 group-hover:scale-110 transition-transform duration-700">
                            </div>

                            <div class="relative">
                                <div
                                    class="inline-flex items-center justify-center w-24 h-24 bg-[#0A2040] rounded-3xl shadow-xl shadow-blue-900/20 mb-8 border-4 border-white transform rotate-3 group-hover:rotate-0 transition-transform duration-500">
                                    <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor"
                                        viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                                    </svg>
                                </div>

                                <h2 class="text-4xl font-black text-[#0A2040] mb-4">Login Required</h2>
                                <p class="text-gray-500 mb-10 max-w-sm mx-auto leading-relaxed text-[17px]">
                                    Please login to manage your profile. Once logged in, you'll be able to view and edit
                                    your
                                    profile details.
                                </p>

                                <a href="/auth/login"
                                    class="inline-flex items-center justify-center px-12 py-5 bg-[#0A2040] text-white font-bold rounded-2xl hover:bg-blue-900 transition-all duration-300 shadow-xl shadow-blue-900/10 group/btn active:scale-95">
                                    <svg class="w-6 h-6 mr-3 transition-transform group-hover/btn:-translate-x-1"
                                        fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5"
                                            d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1" />
                                    </svg>
                                    <span class="tracking-widest uppercase text-sm">Login to Manage Profile</span>
                                </a>
                            </div>
                        </div>
                    </div>
                    <% } %>
        </div>
    </div>

    <style>
        .no-scrollbar::-webkit-scrollbar {
            display: none;
        }

        .no-scrollbar {
            -ms-overflow-style: none;
            scrollbar-width: none;
        }
    </style>

    <script>
        function previewImage(input) {
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    const img = document.getElementById('profileImagePreview');
                    const initialDiv = document.getElementById('profileInitial');

                    if (initialDiv) {
                        initialDiv.style.display = 'none';
                    }

                    if (img) {
                        img.src = e.target.result;
                        img.style.display = 'block';
                    } else {
                        // If image tag doesn't exist (because user had initial), create it
                        const container = document.querySelector('.w-24.h-24');
                        const newImg = document.createElement('img');
                        newImg.id = 'profileImagePreview';
                        newImg.src = e.target.result;
                        newImg.alt = 'Profile';
                        newImg.className = 'w-full h-full object-cover';
                        container.appendChild(newImg);
                    }
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>

    <%- include('partials/footer') %>