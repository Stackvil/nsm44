<%- include('partials/header') %>

    <div class="bg-gray-50 min-h-screen py-16" x-data="galleryHandler()">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

            <!-- Header -->
            <div class="text-center mb-16">
                <h1 class="text-5xl font-extrabold text-[#002845] mb-4 tracking-tight uppercase">Reunion Gallery</h1>
                <p class="text-gray-600 max-w-2xl mx-auto text-lg">Relive the moments where we came together.</p>
            </div>

            <!-- View 1: Year Grid (Shown when no activeYear selected) -->
            <img :src="getCoverImage(year)"
                class="absolute inset-0 w-full h-full object-cover opacity-60 group-hover:opacity-40 transition-opacity duration-300">

            <div class="absolute inset-0 flex items-center justify-center">
                <h2 class="text-4xl font-extrabold text-white drop-shadow-md tracking-wider border-2 border-white/30 px-6 py-2 rounded-xl backdrop-blur-sm"
                    x-text="year"></h2>
            </div>
        </div>

        <div class="p-5 text-center bg-white relative z-10">
            <span class="text-xs font-bold text-gray-400 uppercase tracking-widest mb-1 block">Collection</span>
            <span class="text-sm font-semibold text-gray-700" x-text="getCount(year) + ' Photos'"></span>
            <div class="mt-4 w-10 h-1 bg-indigo-500 mx-auto rounded-full group-hover:w-20 transition-all duration-300">
            </div>
        </div>
    </div>
    </template>
    </div>

    <!-- No photos message -->
    <div x-show="sortedYears.length === 0" class="text-center py-20">
        <p class="text-gray-400 text-xl font-light">No photos uploaded yet.</p>
    </div>
    </div>

    <!-- View 2: Photo Grid for Specific Year (Shown when activeYear is set) -->
    <div x-show="activeYear" x-cloak class="min-h-screen">
        <!-- Breadcrumb / Back -->
        <div class="flex items-center gap-4 mb-8">
            <button @click="activeYear = null"
                class="flex items-center gap-2 text-indigo-600 font-bold hover:text-indigo-800 transition">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                Back to Years
            </button>
            <div class="h-6 w-px bg-gray-300"></div>
            <h2 class="text-2xl font-bold text-gray-800" x-text="activeYear + ' Gallery'"></h2>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
            <template x-for="(photo, index) in getPhotosForYear(activeYear)" :key="index">
                <div class="bg-white p-2 rounded-xl shadow-sm hover:shadow-xl transition duration-300 cursor-zoom-in"
                    @click="openLightbox(photo)">
                    <div class="h-64 rounded-lg overflow-hidden relative group">
                        <img :src="photo.imageUrl" :alt="photo.title"
                            class="w-full h-full object-cover transition duration-700 group-hover:scale-110">
                        <!-- Overlay -->
                        <div
                            class="absolute inset-0 bg-black/0 group-hover:bg-black/20 transition duration-300 flex items-center justify-center opacity-0 group-hover:opacity-100">
                            <span
                                class="bg-white/90 rounded-full p-3 text-indigo-600 shadow-lg transform scale-50 group-hover:scale-100 transition duration-300">
                                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0h-3">
                                    </path>
                                </svg>
                            </span>
                        </div>
                    </div>
                    <div class="mt-3 px-1">
                        <h3 class="font-bold text-gray-800 truncate" x-text="photo.title"></h3>
                        <p class="text-xs text-gray-400 mt-0.5 truncate" x-text="photo.description"></p>
                    </div>
                </div>
            </template>
        </div>

        <div x-show="getPhotosForYear(activeYear).length === 0" class="text-center py-20 text-gray-500">
            No photos in this folder.
        </div>
    </div>

    </div>

    <!-- Lightbox Modal -->
    <div x-show="lightboxOpen" x-transition.opacity.duration.300ms x-cloak
        class="fixed inset-0 z-[100] bg-black/95 backdrop-blur-lg flex items-center justify-center p-4">

        <button @click="lightboxOpen = false" class="absolute top-6 right-6 text-white/50 hover:text-white transition">
            <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12">
                </path>
            </svg>
        </button>

        <div class="max-w-7xl max-h-[90vh] relative" @click.outside="lightboxOpen = false">
            <img :src="activePhoto?.imageUrl"
                class="max-h-[85vh] max-w-full rounded-md shadow-2xl mx-auto object-contain">
            <div class="text-center mt-4 space-y-1">
                <h3 class="text-white text-xl font-bold tracking-wide" x-text="activePhoto?.title"></h3>
                <p class="text-gray-400 text-sm" x-text="activePhoto?.description"></p>
            </div>
        </div>
    </div>

    </div>

    <!-- Pass data to JS safely -->
    <script id="gallery-data" type="application/json">
    <%- JSON.stringify(gallery) %>
</script>

    <!-- Alpine.js -->
    <script src="//unpkg.com/alpinejs" defer></script>
    <script>
        function galleryHandler() {
            let items = [];
            try {
                const dataElement = document.getElementById('gallery-data');
                if (dataElement && dataElement.textContent) {
                    items = JSON.parse(dataElement.textContent);
                }
            } catch (e) {
                console.error('Failed to parse gallery data:', e);
            }

            return {
                items: items,
                activeYear: null,
                lightboxOpen: false,
                activePhoto: null,

                get sortedYears() {
                    // Extract unique years. If year is null, label 'General'
                    const years = [...new Set(this.items.map(item => item.year || 'General'))];
                    // Sort descending (newest first). 'General' goes last.
                    return years.sort((a, b) => {
                        if (a === 'General') return 1;
                        if (b === 'General') return -1;
                        return b - a; // Descending numbers
                    });
                },

                getPhotosForYear(year) {
                    return this.items.filter(item => {
                        if (year === 'General') return !item.year;
                        return item.year == year;
                    });
                },

                getCoverImage(year) {
                    const photos = this.getPhotosForYear(year);
                    return photos.length > 0 ? photos[0].imageUrl : '';
                },

                getCount(year) {
                    return this.getPhotosForYear(year).length;
                },

                openYear(year) {
                    this.activeYear = year;
                    window.scrollTo({ top: 0, behavior: 'smooth' });
                },

                openLightbox(photo) {
                    this.activePhoto = photo;
                    this.lightboxOpen = true;
                }
            }
        }
    </script>

    <style>
        [x-cloak] {
            display: none !important;
        }
    </style>

    <%- include('partials/footer') %>